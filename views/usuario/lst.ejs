<%- include('./cabecalho'); %>
    <form method="post">
        <input type="text" name="pesquisa" placeholder="Digita aí">
        <input type="submit" value="Pesquisar">
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Foto</th>
            <th>Ações</th>
        </tr>
    <% Usuarios.forEach(function(usuario){ %>
        <tr>
            <td>
                <%=usuario._id%>
            </td>
            <td>
                <%=usuario.nome%>
            </td>
            <td>
                <%=usuario.email%>
            </td>
            <td>
                <img class="img-responsive" src="/fotos/<%=usuario.foto%>" alt="Foto do usuário">
            </td>
            <td>
                <a href="/usuario/edt/<%=usuario._id%>">
                    <img class="img-responsive" src="/edit.png" alt="Editar">
                </a>
                <a href="/usuario/del/<%=usuario._id%>">
                    <img class="img-responsive" src="/delete.png" alt="Deletar">
                </a>
            </td>
        </tr>
    <% }) %>
    </table>
<%- include('../rodape')%>